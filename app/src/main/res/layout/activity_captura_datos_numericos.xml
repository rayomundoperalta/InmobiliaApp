<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CapturaDatosNumericos">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1">

            <TextView
                android:text="C.P."
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/textViewCP"
                android:layout_weight="1"
                android:textColor="@color/negro"
                android:paddingLeft="10dp"/>

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextCP"
                android:paddingRight="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1">

            <TextView
                android:text="Vida útil-meses"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/textViewVidaUtil"
                android:layout_weight="1"
                android:textColor="@color/negro"
                android:paddingLeft="10dp"/>

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextVidaUtil"
                android:paddingRight="10dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" >

            <TextView
                android:text="Superficie Terreno-m2"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/textViewSuperTerreno"
                android:paddingLeft="10dp"
                android:textColor="@color/negro"
                android:layout_weight="1" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextSuperTerreno"
                android:paddingRight="10dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" >

            <TextView
                android:text="Superficie Construida-m2"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/textView6"
                android:paddingLeft="10dp"
                android:textColor="@color/negro"
                android:layout_weight="1" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextSuperConstruida"
                android:paddingRight="10dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" >

            <TextView
                android:text="Valor de la Construcción-$"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/textViewValorConstruccion"
                android:paddingLeft="10dp"
                android:textColor="@color/negro"
                android:layout_weight="1" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextValorConstruccion"
                android:paddingRight="10dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" >

            <TextView
                android:text="Precio-$"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/textViewValorConcluido"
                android:paddingLeft="10dp"
                android:textColor="@color/negro"
                android:layout_weight="1" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextValorConcluido"
                android:paddingRight="10dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:text="Siguiente"
            android:layout_width="120dp"
            android:layout_height="5dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/blanco"
            android:id="@+id/btnSiguiente"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button"/>

    </LinearLayout>
<!--
    android:gravity="center"

    android:layout_marginLeft="50dp"
    android:text="Guardar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/btnGuardar"
    android:layout_below="@+id/coordenadas"
    android:layout_gravity="right"
    android:layout_weight="0.14"
    android:background="@color/colorPrimary"
    android:textColor="@color/blanco"

    style="@style/Widget.AppCompat.Button"
    -->

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:itemTextColor="@color/negro"
        app:itemIconTint="@color/negro"
        app:menu="@menu/drawer"
        />

</android.support.v4.widget.DrawerLayout>